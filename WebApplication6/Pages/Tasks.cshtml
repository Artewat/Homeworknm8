@page
@model RazorApp.Pages.TasksModel
@{
    ViewData["Title"] = "Задачи";
}

<h2><i class="bi bi-list-task"></i> Список задач</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Создана</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.CreatedAt.ToString("g")</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@task.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Удалить
                        </button>
                    </form>

                    <a asp-page="/EditTask" asp-route-id="@task.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Изменить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
